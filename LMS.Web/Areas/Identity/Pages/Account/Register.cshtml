@page
@model RegisterModel
@using LMS.Core.Entities
@using LMS.Data.Data
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">

        <h4>Create a new account.</h4>




        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>


            <div>
                <label asp-for="Input.role"></label>
                <select asp-for="Input.role" name="Input.role" class="form-control" asp-items="Html.GetEnumSelectList<RolesEnum>()">
                    <option selected="selected">Select role</option>
                </select>
            </div>



            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input id="FirstName" asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger" required></span>
            </div>  <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input id="LastName" asp-for="Input.LastName" class="form-control" required />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input id="Email" asp-for="Input.Email" class="form-control" value=".lms@lexicon.se " required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" value="123QWEasdzxc." required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" value="123QWEasdzxc." required />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>


                <div class="form-group">
                    <label asp-for="Input.CourseId" class="control-label"></label>
                    <select id="courseNamelist" asp-for="Input.CourseId" class="form-control" asp-items=@(Model.CoursesList)>
                        <option selected="selected">Select Course</option>
                    </select>
                    <span asp-validation-for="Input.CourseId" class="text-danger"></span>
                </div>









                @*<div class="form-group">

                        <input id="dictionary" type="hidden"  class="form-control"
                              value=@(Model.Dictionary)/>

                    </div>*@


                @*<div class="form-group">
                        <label asp-for="Input.CourseId" class="control-label" required></label>
                        <input id="courseId" asp-for="Input.CourseId" class="form-control"/>
                        <span asp-validation-for="Input.CourseId" class="text-danger"></span>
                    </div>*@





            </div>
            <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Register</button>

            <!-- The Modal -->
            <div class="modal fade" id="myModal">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">

                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            User creatted successfully!!..
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>


        </form>
    </div>
    <div class="col-md-4 col-md-offset-2">
        <section>
            <h6>More information about Registering.</h6>
            <hr />
            <div>
                <p>
                    - Password is generated automatically "123QWEasdzxc."
                </p>
                <p id="demo">   here you can write </p>

            </div>

        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
