@model IEnumerable<CourseListViewModel>

@{
    ViewData["Title"] = "Courses";

}

<h1>Courses</h1>

<p class="offset-10">
    <a asp-action="Create" class="btn btn-success">Add Course</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <p class="course-btn">
                        <a class="btn btn-primary" data-toggle="collapse" href="#courseList-@item.Id" role="button" aria-expanded="false" aria-controls="collapseExample">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>

                    </p>
                    <div class="row">
                        <div class="col">
                            <div class="collapse multi-collapse" id="courseList-@item.Id">

                                <div class="card card-body">
                                    @foreach (var modules in item.Modules)
                                    {
                                        <dl class="row">
                                            <dt class="col-sm-12 btn btn-secondary">

                                                @Html.DisplayFor(v => modules.Name)
                                            </dt>

                                        </dl>

                                    }

                                </div>

                            </div><!-- End collapse -->
                        </div><!-- End col -->
                        <div class="col">
                            <div class="collapse multi-collapse" id="courseList-@item.Id">

                                <div class="card card-body">

                                    <p class="text-dark">Course Details</p>
                                    <partial name="DetailsPartial" model="@item.CourseDetails" />




                                </div>
                            </div>
                        </div>

                    </div>




                </td>

            </tr>
        }

    </tbody>
</table>